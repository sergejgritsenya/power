generator prisma {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model Admin {
    id       String         @default(cuid()) @id
    login    String         @unique
    email    String         @unique
    is_super Boolean        @default(false)
    password AdminPassword?
    salt     AdminSalt?
}

model AdminPassword {
    id       String @default(cuid()) @id
    password String
    admin    Admin  @relation(references: [id])
}

model AdminSalt {
    id    String @default(cuid()) @id
    salt  String
    admin Admin  @relation(references: [id])
}

model News {
    id         String   @default(cuid()) @id
    title      String
    text       String
    created_at DateTime @default(now())
}

model Tournament {
    id          String            @default(cuid()) @id
    name        String
    logo        String?
    description String
    created_at  DateTime          @default(now())
    videos      TournamentVideo[]
    images      TournamentImage[]
}

model TournamentImage {
    id         String     @default(cuid()) @id
    url        String
    tournament Tournament
}

model TournamentVideo {
    id         String     @default(cuid()) @id
    url        String
    tournament Tournament
}