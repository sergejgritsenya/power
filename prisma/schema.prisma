generator prisma {
  provider = "prisma-client-js"
}
datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Admin {
    id String @default(cuid()) @id
    name String
    email String
    password AdminPassword
    salt AdminSalt
}
model AdminPassword {
    id String @default(cuid()) @id
    password String 
    admin Admin
}
model AdminSalt {
    id String @default(cuid()) @id
    salt String 
    admin Admin
}
model News {
    id String @default(cuid()) @id
    title String
    text String
}
model Tournament {
    id String @default(cuid()) @id
    name String
    logo String?
    description String
    videos TournamentVideo[]
    images TournamentImage[]
}
model TournamentImage {
    id String @default(cuid()) @id
    url String
    tournament Tournament 
}
model TournamentVideo {
    id String @default(cuid()) @id
    url String
    tournament Tournament 
}